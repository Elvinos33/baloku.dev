---
import ProjectCard from "../components/ProjectCard.astro";
import { Icon } from "astro-icon/components";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Elvin Baloku, A Developer based in Oslo, Norway"
    />
    <title>Elvin Baloku</title>
  </head>
  <body class="">
    <div
      class="snap-y snap-mandatory h-screen overflow-y-scroll overflow-x-hidden"
    >
      <section
        class="bg-neutral-900 w-screen h-screen snap-center snap-always flex flex-col gap-2 items-center justify-center"
      >
        <div class="animate-in slide-in-from-left">
          <h1 class="text-5xl md:text-6xl font-bold text-white">
            Hi, I'm Elvin ðŸ‘‹
          </h1>
          <h2
            class="text-xl md:text-2xl font-semibold text-opacity-80 text-white"
          >
            A Developer Based in Oslo, Norway.
          </h2>
        </div>
      </section>
      <section
        class="bg-neutral-900 w-screen h-screen snap-center snap-always flex items-center justify-center"
      >
        <div class="mx-10 w-[40rem] space-y-2">
          <h2 class="text-5xl text-white font-bold">About Me</h2>
          <p
            class="text-[14px] md:text-[16px] text-white font-semibold opacity-75"
          >
            I'm currently a student at Elvebakken High School in Oslo, Norway. I
            really enjoy programming and tackling all kinds of different tech
            projects. I'm always up for a challenge and I love learning new
            technologies. I also love listening to all kinds of music,
            especially Tame Impala and Pond. Their music helps me focus, whether
            I'm coding or just relaxing. And also, I'm really into using Vim.
          </p>
        </div>
      </section>
      <section
        class="bg-neutral-900 w-screen h-screen snap-center snap-always flex items-center justify-center"
      >
        <div class="space-y-5 w-full flex flex-col items-center mx-5">
          <h2 class="text-5xl text-white font-bold">Some of my Projects</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-2">
            <ProjectCard
              projectName="krt.im"
              projectDescription="A URL shortener made for other students and teachers at Elvebakken High School."
              projectLink="https://github.com/Elvinos33/krt.im"
            />
            <ProjectCard
              projectName="Findify"
              projectDescription="A website used for Spotify song recommendations."
              projectLink="https://github.com/Elvinos33/findify"
            />
            <ProjectCard
              projectName="StableDiffusion WebUI"
              projectDescription="A WebUI allowing you to generate images on the web."
              projectLink="https://github.com/Herjuus/im-diffusion"
            />
            <ProjectCard
              projectName="Managed Databases for Elvebakken"
              projectDescription="Managed databases set up at Elvebakken High School's servers."
              projectLink="https://github.com/Elvinos33/dbaas"
            />
          </div>
        </div>
      </section>
      <section
        class="bg-neutral-900 w-screen h-screen snap-center snap-always flex items-center justify-center"
      >
        <div class="space-y-8">
          <h2 class="text-center text-4xl font-bold text-white">
            More Projects and Information!
          </h2>
          <div class="w-full flex gap-5 items-center justify-center">
            <a
              title="Github"
              href="https://github.com/Elvinos33"
              class="hover:brightness-125"
            >
              <Icon name={"mdi:github"} size={50} color={"gray"} />
            </a>
            <a
              title="X/Twitter"
              href="https://www.linkedin.com/in/elvin-baloku-3458372b0/"
              class="hover:brightness-125"
            >
              <Icon name={"mdi:linkedin"} size={50} color={"gray"} />
            </a>
            <a
              title="LinkedIn"
              href="https://x.com/ElvinosDev"
              class="hover:brightness-125"
            >
              <Icon name={"pajamas:x"} size={50} color={"gray"} />
            </a>
          </div>
        </div>
      </section>
    </div>
  </body>
</html>
